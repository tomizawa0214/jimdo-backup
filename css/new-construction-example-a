<script type="text/javascript">
//<![CDATA[
    $(document).ready(function(){
        // サブナビを固定
        if ($(window).width() > 767) {
            $('body').prepend('<div class="subnavi"><a href="https://www.nemoto-k.net/new-house/">新<br>築<br>住<br>宅<br>事<br>業<br><span>➟<\/span><\/a><a href="https://www.nemoto-k.net/new-house/flow-of-new-construction/">新<br>築<br>の<br>流<br>れ<br><span>➟<\/span><\/a><\/div>');
        }
        $(window).resize(() => {
            if ($(window).width() > 767 && !$('div').hasClass('subnavi')) {
                $('body').prepend('<div class="subnavi"><a href="https://www.nemoto-k.net/new-house/">新<br>築<br>住<br>宅<br>事<br>業<br><span>➟<\/span><\/a><a href="https://www.nemoto-k.net/new-house/flow-of-new-construction/">新<br>築<br>の<br>流<br>れ<br><span>➟<\/span><\/a><\/div>');
            } else if ($(window).width() < 768 && $('div').hasClass('subnavi')) {
                $('.subnavi').remove();
            }
        });
        
        // スマホ用サブナビ
        if ($(window).width() < 768) {
            $('body').prepend('<div class="subnavi-sp"><a href="https://www.nemoto-k.net/new-house/">新築住宅事業<\/a><a href="https://www.nemoto-k.net/new-house/flow-of-new-construction/">新築の流れ<\/a><\/div>');
        }
        $(window).resize(() => {
            if ($(window).width() < 768 && !$('div').hasClass('subnavi-sp')) {
                $('body').prepend('<div class="subnavi-sp"><a href="https://www.nemoto-k.net/new-house/">新築住宅事業<\/a><a href="https://www.nemoto-k.net/new-house/flow-of-new-construction/">新築の流れ<\/a><\/div>');
            } else if ($(window).width() > 767 && $('div').hasClass('subnavi-sp')) {
                $('.subnavi-sp').remove();
            }
        });
        
        // サムネイルのカラム隙間
        let columnWidth = ($('#content_area > div:nth-of-type(2) > div:nth-of-type(4)').width() - 40)/3;
        $(window).resize(() => {
            let columnWidth = ($('#content_area > div:nth-of-type(2) > div:nth-of-type(4)').width() - 40)/3;
            $('#content_area > div:nth-of-type(2) > div:nth-of-type(4) .cc-m-hgrid-column').css('width', columnWidth);
            $('#content_area > div:nth-of-type(2) > div:nth-of-type(4).cc-m-hgrid-column').css('padding-right', '20px');
            $('#content_area > div:nth-of-type(2) > div:nth-of-type(4) .cc-m-hgrid-column.last').css('padding', '0');
        });
        $('#content_area > div:nth-of-type(2) > div:nth-of-type(4) .cc-m-hgrid-column').css('width', columnWidth);
        $('#content_area > div:nth-of-type(2) > div:nth-of-type(4) .cc-m-hgrid-column').css('padding-right', '20px');
        $('#content_area > div:nth-of-type(2) > div:nth-of-type(4) .cc-m-hgrid-column.last').css('padding', '0');
    });
//]]>
</script>